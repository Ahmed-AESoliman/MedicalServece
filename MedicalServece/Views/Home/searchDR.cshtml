        <section class="serch">
            <div class="jobs col-lg-12 ">
                <div class="jobs-top">
                    <div class="container">
                        <div class="row">

                            <div class="change col-lg-12">
                                @using (Html.BeginForm("searchDR", "Home", FormMethod.Post, new { @class = "hidden-xs" }))
                                {
                                    <div class="choose-property col-lg-9 col-md-8 col-sm-8 col-xs-12 hidden-xs">
                                        <ul>
                                            <li>
                                                @Html.DropDownList("Specialization",null, "التخصص", new { id = "select1" })
                                            </li>
                                            
                                            <li>
                                                @Html.DropDownList("Area", new List<SelectListItem> {
                                            new SelectListItem {Text="المعادي" ,Value="المعادي"},
                                            new SelectListItem {Text="الجيزه" ,Value="الجيزه"} ,
                                            },"المنطقه", new { id = "select2" })
                                            </li>
                                            <li>
                                                <input type="text" id="select3" name="DName" placeholder="ابحث باسم الدكتور...">
                                            </li>

                                            <li><input type="submit" class="serch-btn" value="بحث" /></li>
                                        </ul>
                                    </div>
                                    <div class="serch-property col-lg-3 col-md-4 col-sm-4 hidden-xs">
                                        <ul class="menuee">
                                            <div class="address"><i class="fa fa-check-square-o icon" aria-hidden="true"></i><span>حدد بحثك</span></div>
                                            <li>
                                                @Html.DropDownList("Title", new List<SelectListItem> {
                                            new SelectListItem {Text="اللقب" ,Value=" "},
                                            new SelectListItem {Text="استشاري" ,Value="استشاري"} ,
                                            new SelectListItem {Text="استاذ" ,Value="استاذ"} ,
                                            new SelectListItem {Text="اخصائي" ,Value="اخصائي"}
                                            }, new { id = "ch-click" })
                                            </li>
                                            <li>
                                                @Html.DropDownList("Gender", new List<SelectListItem> {
                                            new SelectListItem {Text="الجنس" ,Value="كل"},
                                            new SelectListItem {Text="دكتور" ,Value="ذكر"} ,
                                            new SelectListItem {Text="دكتوره" ,Value="انثي"} ,
                                            }, new { id = "ch-click" })
                                            </li>
                                        </ul>
                                    </div>

                                }
                                @using (Html.BeginForm("searchDR", "Home", FormMethod.Post,new {@class= "visible-xs" }))
                                {
                                    <div class="full-nav1 visible-xs">
                                        <nav class="nav1">
                                            <div class="save-recover">
                                                <div class="top">
                                                    <h3> ابحث</h3>
                                                </div>
                                                @Html.DropDownList("Specialization", null, new { id = "text2" })
                                                @Html.DropDownList("Area", new List<SelectListItem> {
                                            new SelectListItem {Text="المعادي" ,Value="المعادي"},
                                            new SelectListItem {Text="الجيزه" ,Value="الجيزه"} ,
                                            }, new { id = "text2" })
                                                <input type="text" id="text2" name="DName" placeholder="ابحث باسم الدكتور...">
                                                <br>
                                                <input type="submit" class="save" value="ابحث">
                                                <a class="nav1-close" href="javascript:void(0);"><input type="button" class="save" value="الغاء"></a>

                                            </div>
                                        </nav>
                                    </div>
                                    <div class="full-nav2 visible-xs">
                                        <nav class="nav2">
                                            <div class="serch-property-phone">
                                                <ul class="menuee-phone">
                                                    <div class="address-phone"><i class="fa fa-check-square-o icon" aria-hidden="true"></i><span>حدد بحثك</span></div>
                                                    <li>
                                                        @Html.DropDownList("Title", new List<SelectListItem> {
                                            new SelectListItem {Text="اللقب" ,Value=" "},
                                            new SelectListItem {Text="استشاري" ,Value="استشاري"} ,
                                            new SelectListItem {Text="استاذ" ,Value="استاذ"} ,
                                            new SelectListItem {Text="اخصائي" ,Value="اخصائي"}
                                            }, new { id = "ch-click" })
                                                    </li>
                                                    <li>
                                                        @Html.DropDownList("Gender", new List<SelectListItem> {
                                            new SelectListItem {Text="الجنس" ,Value="كل"},
                                            new SelectListItem {Text="دكتور" ,Value="ذكر"} ,
                                            new SelectListItem {Text="دكتوره" ,Value="انثي"} ,
                                            }, new { id = "ch-click" })
                                                    </li>
                                                </ul>
                                                <input type="submit" class="save" value="ابحث">
                                                <a class="nav2-close" href="javascript:void(0);"><input type="button" class="save" value="الغاء"></a>
                                            </div>
                                        </nav>
                                    </div>

                                }
                            </div>

                            <div class="choose-serch col-lg-12 col-md-12 col-sm-12 col-xs-12">

                                <div class="top-menu1 visible-xs">
                                    <ul class="sort">
                                        <li>
                                        </li>
                                        <li>
                                            <div class="btn-group1">
                                                <span>
                                                    <a class="click" href="javascript:void(0);">
                                                        <button type="button" id="group-sd2">
                                                            تصفية
                                                            <i class="fa fa-filter" aria-hidden="true"></i>
                                                        </button>
                                                    </a>
                                                </span>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
@{int cunt = 1;}
                                @foreach (var item in Model)
                                {
                                    <a href=@Url.Action("DrDetiles","Home",new {id=item.user.Id})>
                                    <div class="bg-serch">
                                        <div class="suggests col-lg-4 col-md-4 hidden-sm hidden-xs">
                                            <div id="imgg1">
                                                <div class="suggests-name">موا<span>عيد</span></div>
                                                <div class="suggests-info">الاط<span>باء</span></div>
                                                <div class="banner">
                                                    <ul class="lightSlider1">
                                                        @foreach (var ap in item.Appointments)
                                                        {
                                                            <li>
                                                                <div class="sub-name">@ap.Day</div>
                                                                <div>من</div>
                                                                <div>@ap.TimeFrom</div>
                                                                <div>الي</div>
                                                                <div>@ap.TimeTo</div>
                                                            </li>
                                                        }

                                                    </ul>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="book col-lg-6 col-md-6 col-sm-10 col-xs-10">
                                            <ul>
                                                <li>
                                                    <h2>@item.user.FullUserName</h2>
                                                </li>
                                                <li>
                                                    <h3>@item.user.ProfessionalTitle @item.user.MajorSpecialization</h3>
                                                </li>
                                                <li>
                                                    <span class="@("star"+cunt)"></span>
                                                </li>
                                                <li>
                                                    <i id="ico-2" class="fa fa-stethoscope" aria-hidden="true"></i>
                                                    <p class="inline">@item.user.FullProfessionalTitle</p>
                                                </li>
                                                <li>
                                                    <i id="ico-2" class="fa fa-map-marker" aria-hidden="true"></i>
                                                    <p class="inline">@item.ClinicArea : @item.ClinicStreat </p>
                                                </li>
                                                <li>
                                                    <i id="ico-2" class="fa fa-money" aria-hidden="true"></i>
                                                    <p class="inline">@item.BookingPrice</p>
                                                </li>
                                                <li>
                                                    <i id="ico-2" class="fa fa-phone" aria-hidden="true"></i>
                                                    <p class="inline">@item.ClininPhone</p>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="temple-count col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                            <div class="color1">
                                                <img src="/images/Capture1.PNG">
                                            </div>
                                        </div>
                                    </div>
                                    
                                </a>
                                    cunt++;
                                }                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
