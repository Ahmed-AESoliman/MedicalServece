        <script src="~/Scripts/jquery.min.js"></script>
        <script src="~/Scripts/jquery.rateyo.min.js"></script>
        @{ int i = 1;}
        @foreach (var rate in Model)
        {
            <script>
            $(function(){
                $('.@("star"+i)').rateYo({
                    rating: @rate.user.OverAllRating ,
                    numStars: 5,
                    maxValue:5,
                    readOnly:true,
                    starWidth: "15px",
                    multiColor: {
                        "startColor": "#FF0000",
                        "endColor": "#f4c027"
                    },
                });
            });
            </script>
            i++;
        }


