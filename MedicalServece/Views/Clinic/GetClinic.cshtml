@model IEnumerable<MedicalServece.Models.Clinic>

@{
    ViewBag.Title = "GetClinic";
    Layout = "~/Views/Shared/_Manage.cshtml";
}
<style>
    .item{

        float: right !important;
        margin: 10px;
        border: 1px solid #30C2FB;
        font-size: 20px;
        padding: 10px;
        width: 225px;
        text-align: right;
        display:inline-block;
    }
</style>
<div class="card mb-3">
    <div class="card-body">
        <div class="table-responsive">
            <div class="container">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-12">
                            <div>
                                <h3 class="h2 text-right text-primary"width="100%">العنوان</h3>
                                
                                <span class="item">@item.City : المحافظه</span>
                                <span class="item">@item.ClinicArea : المنطقه</span>
                                <span class="item">@item.ClinicStreat : رقم/اسم الشارع</span>

                                <span class="item">@item.BuldingNumber : رقم المبني</span>
                                <span class="item">@item.Floor : الدور</span>

                                <span class="item">@item.SpecialMarque : علامه مميزه</span>

                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div>
                                <h3 class="h2 text-right text-primary" width="100%">بيانات العياده</h3>

                                <span class="item">@item.ClinicName : اسم العياده</span>
                                <span class="item">@item.ClininPhone : رقم الهاتف</span>
                                <span class="item">@item.BookingPrice : سعر الكشف</span>

                            </div>
                        </div>
                        <div class="col-lg-12">
                            @Html.ActionLink("تعديل البيانات", "EditClinic",null,new { @class= "btn btn-success" })
                        </div>

                    }

                </div>
            </div>
        </div>

    </div>
</div>
